<h1>Log In</h1>

<% form_tag session_path do -%>
<p><%= label_tag 'email' %><br />
<%= text_field_tag 'email', @email %></p>

<p><%= label_tag 'password' %><br/>
<%= password_field_tag 'password', nil %></p>

<p><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<%= hidden_field_tag 'return_to', params[:return_to] %>
<p><%= submit_tag 'Log in' %></p>
<% end -%>

<p>
    <%= link_to 'Forgotten password?', forgotten_password_path %> |
    <%= link_to 'Signup', signup_url(:subdomain => login_url_subdomain, :protocol => login_url_protocol) %>
</p>
